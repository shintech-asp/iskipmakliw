@{
    ViewData["Title"] = "Edit Product";
    Layout = "_LayoutSeller";
    
}
@model ProductVariants;

<form asp-controller="Seller" asp-action="ProductEdit" method="post">
    <div class="row mb-4 layout-spacing layout-top-spacing">

        <div class="col-xxl-9 col-xl-12 col-lg-12 col-md-12 col-sm-12">

            <div class="widget-content widget-content-area ecommerce-create-section p-4">

                <div class="row mb-4">
                    <div class="col-sm-12">
                        <input type="text" class="form-control" id="inputEmail3" value="@Model.Product.Name" placeholder="Product Name" readonly>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-sm-12">
                        <label>Description</label>
                        <textarea class="form-control" rows="5" readonly>@Model.Product.Details</textarea>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        <label for="product-images">Upload Images</label>
                        <div class="img">
                            @if (Model.Gallery.FirstOrDefault().Image != null && Model.Gallery.FirstOrDefault().Image.Length > 0)
                            {
                                var base64Img = Convert.ToBase64String(Model.Gallery.FirstOrDefault().Image);
                                <img src="data:image/png;base64,@base64Img" class="img-fluid border rounded" style="max-height:300px;" />
                            }
                            else
                            {
                                <p class="text-muted">No image uploaded.</p>
                            }
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-xxl-3 col-xl-12 col-lg-12 col-md-12 col-sm-12">
            <div class="row">
                <div class="col-xxl-12 col-xl-8 col-lg-8 col-md-7 mt-xxl-0 mt-4">
                    <div class="widget-content widget-content-area ecommerce-create-section p-3">
                        <div class="row">
                            <div class="col-xxl-12 col-md-6 mb-4">
                                <label for="proCode">Material</label>
                                <input type="text" class="form-control" id="proCode" asp-for="Material" value="@Model.Material" placeholder="Leave empty if none">
                            </div>
                            <div class="col-xxl-12 col-md-6 mb-4">
                                <label for="proSKU">Dimension / Sizes</label>
                                <input type="text" class="form-control" id="proSKU" asp-for="Dimension" value="@Model.Dimension">
                            </div>
                            <div class="col-xxl-12 col-md-6 mb-4">
                                <label for="proCode">Color</label>
                                <input type="text" class="form-control" id="proCode" asp-for="Color" value="@Model.Color" placeholder="Leave empty if none">
                            </div>
                            <div class="col-xxl-12 col-md-6 mb-4">
                                <label for="proCode">Quantity</label>
                                <input type="text" class="form-control" id="proCode" asp-for="Quantity" value="@Model.Quantity" placeholder="199">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xxl-12 col-xl-4 col-lg-4 col-md-5 mt-4">
                    <div class="widget-content widget-content-area ecommerce-create-section p-3">
                        <div class="row">
                            <div class="col-sm-12 mb-4">
                                <label for="regular-price">Regular Price</label>
                                <input type="text" class="form-control" id="regular-price" asp-for="Price" value="@Model.Price">
                            </div>
                            <div class="col-sm-12 mb-4">
                                <label for="sale-price">Discount</label>
                                <input type="text" class="form-control" id="sale-price" asp-for="Discount" value="@Model.Discount" placeholder="Leave empty if none">
                            </div>
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="col">
                                        <button type="button" id="Remove" class="btn btn-danger w-100 _effect--ripple waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#standardModal">
                                            Remove <br /> Product
                                        </button>
                                    </div>
                                    <div class="col">
                                        <button type="button" id="Save" class="btn btn-secondary w-100 _effect--ripple waves-effect waves-light" data-bs-toggle="modal" data-bs-target="#standardModal">
                                            Save <br /> Product
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade modal-notification" id="standardModal" tabindex="-1" aria-labelledby="standardModalLabel" aria-modal="true" role="dialog">
            <div class="modal-dialog" role="document" id="standardModalLabel">
                <div class="modal-content">
                    <div class="modal-body text-center">
                        <div class="icon-content">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-bell"><path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path><path d="M13.73 21a2 2 0 0 1-3.46 0"></path></svg>
                        </div>
                        <p class="modal-text">Are you sure?</p>
                        <input type="hidden" id="buttonType" name="ButtonType" />
                        <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button class="btn btn-light-dark _effect--ripple waves-effect waves-light" data-bs-dismiss="modal">Discard</button>
                        <button type="submit" class="btn btn-primary _effect--ripple waves-effect waves-light">Save</button>
                    </div>
                </div>
            </div>
        </div>
     </div>
</form>
@section Scripts {
    <script>
        $("#Save").click(function () {
            $("#standardModal").show();
            $("#buttonType").val("Save");
        });

        $("#Remove").click(function () {
            $("#standardModal").show();
            $("#buttonType").val("Remove");
        });
    </script>
}
