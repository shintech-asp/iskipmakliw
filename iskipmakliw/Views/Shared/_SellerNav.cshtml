@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    // Dashboard
    var isDashboardActive = currentController == "Seller" && currentAction == "Index";

    // Users
    var isUsersActive = currentController == "Seller" && currentAction == "Users";

    // Ecommerce (product pages)
    var isEcommerceActive = currentController == "Seller" &&
    (currentAction == "ProductList" || currentAction == "ProductAdd" || currentAction == "ProductEdit");

    // Orders
    var isOrdersActive = currentController == "Seller" && currentAction == "Orders";

    // Reports
    var isReportsActive = currentController == "Seller" && currentAction == "Reports";

    // Store Settings
    var isSettingsActive = currentController == "Seller" && currentAction == "StoreSettings";
}
@inject IHttpContextAccessor HttpContextAccessor
<ul class="list-unstyled menu-categories" id="accordionExample">

    <!-- Dashboard -->
    <li class="menu @(isDashboardActive ? "active" : "")">
        <a asp-action="Index" asp-controller="Seller" data-bs-toggle="collapse" aria-expanded="@(isDashboardActive.ToString().ToLower())" class="dropdown-toggle">
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home">
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                </svg>
                <span>Dashboard</span>
            </div>
            <div>
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-right">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </div>
        </a>
        <ul class="collapse submenu list-unstyled @(isDashboardActive ? "show" : "")" id="dashboard" data-bs-parent="#accordionExample">
            <li class="@(isDashboardActive ? "active" : "")">
                <a asp-action="Index" asp-controller="Seller"> Home </a>
            </li>
        </ul>
    </li>
    @if (HttpContextAccessor.HttpContext.Session.GetString("Status") == "Approved")
    {
        <!-- Management -->
        <li class="menu menu-heading">
            <div class="heading">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-minus">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                <span>Management</span>
            </div>
        </li>
        <li class="menu @(isUsersActive ? "active" : "")">
            <a asp-controller="Seller" asp-action="Users" aria-expanded="false" class="dropdown-toggle">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-users">
                        <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                        <circle cx="9" cy="7" r="4"></circle>
                        <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                        <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                    </svg>
                    <span>Users</span>
                </div>
            </a>
        </li>

        <!-- Ecommerce -->
        <li class="menu @(isEcommerceActive ? "active" : "")">
            <a href="#ecommerce" data-bs-toggle="collapse" aria-expanded="@(isEcommerceActive.ToString().ToLower())" class="dropdown-toggle">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-shopping-cart">
                        <circle cx="9" cy="21" r="1"></circle>
                        <circle cx="20" cy="21" r="1"></circle>
                        <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
                    </svg>
                    <span>Your shop</span>
                </div>
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-chevron-right">
                        <polyline points="9 18 15 12 9 6"></polyline>
                    </svg>
                </div>
            </a>
            <ul class="submenu list-unstyled collapse @(isEcommerceActive ? "show" : "")" id="ecommerce" data-bs-parent="#accordionExample">
                <li class="@(currentAction == "ProductList" ? "active" : "")">
                    <a asp-controller="Seller" asp-action="ProductList"> List Product </a>
                </li>
                <li class="@(currentAction == "ProductAdd" ? "active" : "")">
                    <a asp-controller="Seller" asp-action="ProductAdd"> Create Product </a>
                </li>
                <li class="@(currentAction == "ProductEdit" ? "active" : "")">
                    <a asp-controller="Seller" asp-action="ProductEdit"> Edit Product </a>
                </li>
            </ul>
        </li>

        <!-- Orders -->
        <li class="menu @(isOrdersActive ? "active" : "")">
            <a asp-controller="Seller" asp-action="Orders" aria-expanded="false" class="dropdown-toggle">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-list">
                        <path d="M9 18h6"></path>
                        <path d="M9 12h6"></path>
                        <path d="M9 6h6"></path>
                    </svg>
                    <span>Manage Orders</span>
                </div>
            </a>
        </li>

        <!-- Reports -->
        <li class="menu menu-heading">
            <div class="heading">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-minus">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                <span>Reports</span>
            </div>
        </li>
        <li class="menu @(isReportsActive ? "active" : "")">
            <a asp-controller="Seller" asp-action="Reports" aria-expanded="false" class="dropdown-toggle">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-file">
                        <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
                        <polyline points="13 2 13 9 20 9"></polyline>
                    </svg>
                    <span>Reports</span>
                </div>
            </a>
        </li>

        <!-- Settings -->
        <li class="menu menu-heading">
            <div class="heading">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-minus">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                </svg>
                <span>SETTINGS</span>
            </div>
        </li>
        <li class="menu @(isSettingsActive ? "active" : "")">
            <a asp-controller="Seller" asp-action="StoreSettings" aria-expanded="false" class="dropdown-toggle">
                <div>
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-settings">
                        <circle cx="12" cy="12" r="3"></circle>
                        <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
                    </svg>
                    <span>Store Settings</span>
                </div>
            </a>
        </li>
    }
</ul>